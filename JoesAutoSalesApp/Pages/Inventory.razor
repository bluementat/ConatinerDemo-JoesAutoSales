@page "/inventory"

<h3>Inventory</h3>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Make</th>
            <th scope="col">Model</th>
            <th scope="col">Color</th>
            <th scope="col">Price</th>
            <th scope="col">Units</th>
        </tr>
    </thead>
    <tbody>
        @foreach (InventoryItem item in InventoryList)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Make</td>
                <td>@item.Model</td>
                <td>@item.Color</td>
                <td>@item.Price</td>
                <td>@item.UnitsInStock</td>
            </tr>
        }
    </tbody>
</table>

<hr />
<div>
    <button class="btn btn-primary" @onclick="LoadData">Load Inventory</button>
</div>

<hr />
<div hidden="@HideError">
    <div class="row" style="color: red;">
        @ErrorMessage
    </div>
</div>


